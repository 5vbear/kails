extends ../layout/layout.pug

block content
  h1 Edit Article
  form(action=('/articles/' + article.id) method="post")
    #article
      article.article
        .article-title
          input(type="hidden" name="_csrf" value=csrf)
          input(type="hidden" name="_method" value='put')
          input(type="text" name="title" class="form-control" placeholder="Article Title" value=article.title required autofocus)
        .article-content
          textarea(class="textarea" name="content" placeholder="Article Content" class="form-control")
            = article.content
        button(class="btn btn-info btn-block" type="submit") Save
